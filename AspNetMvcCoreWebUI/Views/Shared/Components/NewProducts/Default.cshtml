<script>
    $(document).ready(function () {
        $('.AddLink').on('click', function () {
            var productId = $(this).attr("data-productId");
            $.ajax({
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                url: '/Cart/AddToCart',
                data: { "productId": productId },
                success: function (data) {
                    $('#spnCart').html(data)
                },
                error: function (data) {
                    alert(data);
                }
            });
        });

