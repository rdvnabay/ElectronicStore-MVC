@model ProductAddViewModel

<link rel="stylesheet" href="~/panel/js/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/panel/js/plugins/dropzone/dist/min/dropzone.min.css">
<!-- Info -->
<form method="POST" asp-controller="Product" asp-action="Add" enctype="multipart/form-data" class="dropzone dz-clickable">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Info</h3>
        </div>
        <div class="block-content">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">

                    <div class="form-group">
                        <label asp-for="Product.Name">Ürün Adı</label>
                        <input asp-for="Product.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.ShortDescription">Özet Bilgi</label>
                        <textarea class="form-control" asp-for="Product.ShortDescription" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Description">Açıklama</label>
                        <textarea id="editor" asp-for="Product.Description"></textarea>
                    </div>

                </div>
                <div class="col-md-2 col-lg-4">
                    @await Component.InvokeAsync(typeof(AspNetMvcCoreWebUI.Areas.AdminPanel.ViewComponents.CategoryList))
                    @*, new { categoryId = Model.CategoryId }*@
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Product.UnitPrice">Fiyat (₺)</label>
                            <input asp-for="Product.UnitPrice" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Product.UnitsInStock">Stok</label>
                            <input asp-for="Product.UnitsInStock" class="form-control">
                        </div>
                    </div>


                    <div class="form-group">
                        <label>Aktif Ürün</label>
                        <div class="custom-control custom-switch mb-1">
                            <input asp-for="ProductDetail.IsActive" type="checkbox" class="custom-control-input">
                            <label class="custom-control-label" asp-for="ProductDetail.IsActive"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Anasayfa</label>
                        <div class="custom-control custom-switch mb-1">
                            <input asp-for="ProductDetail.IsHome" type="checkbox" class="custom-control-input">
                            <label class="custom-control-label" asp-for="ProductDetail.IsHome"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Yeni Ürün</label>
                        <div class="custom-control custom-switch mb-1">
                            <input asp-for="ProductDetail.IsNewProduct" type="checkbox" class="custom-control-input">
                            <label class="custom-control-label" asp-for="ProductDetail.IsNewProduct"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>En Çok Satanlar</label>
                        <div class="custom-control custom-switch mb-1">
                            <input asp-for="ProductDetail.IsTopSelling" type="checkbox" class="custom-control-input">
                            <label class="custom-control-label" asp-for="ProductDetail.IsTopSelling"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-alt-success">Ürünü Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Info -->

    <!-- Media -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Media</h3>
        </div>
        <div class="block-content block-content-full">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <input type="file" name="files" multiple />
                    <!-- Dropzone (functionality is auto initialized by the plugin itself in js/plugins/dropzone/dropzone.min.js) -->
                    <!-- For more info and examples you can check out http://www.dropzonejs.com/#usage -->
                    @*<form class="dropzone" action="be_pages_ecom_product_edit.html"></form>*@
                </div>
            </div>
        </div>
    </div>
    <!-- END Media -->
</form>

<!-- Page JS Plugins -->
<script src="~/panel/js/plugins/select2/js/select2.full.min.js"></script>
<script src="~/panel/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
<script src="~/panel/js/plugins/ckeditor/ckeditor.js"></script>
<script src="~/panel/js/plugins/dropzone/dropzone.min.js"></script>

<script>
    CKEDITOR.replace('editor');
    </script>