@model List<UserOrderListDto>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <td></td>
                        <td>Ürün Adı</td>
                        <td>Adeti</td>
                        <td>Fiyatı</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@product.Name</td>
                            <td>@product.Quantity</td>
                            <td>@product.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
