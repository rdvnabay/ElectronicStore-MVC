@model ProductCategoryListModel

<link rel="stylesheet" href="~/panel/js/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/panel/js/plugins/dropzone/dist/min/dropzone.min.css">
<!-- Info -->
<form method="POST" asp-controller="Product" asp-action="Add" enctype="multipart/form-data" class="dropzone dz-clickable">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Info</h3>
        </div>
        <div class="block-content">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">

                    <div class="form-group">
                        <label for="one-ecom-product-id">PID</label>
                        <input type="text" class="form-control" id="one-ecom-product-id" name="one-ecom-product-id" value="789" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Name">Ürün Adı</label>
                        <input asp-for="Product.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <!-- CKEditor (js-ckeditor-inline + js-ckeditor ids are initialized in Helpers.ckeditor()) -->
                        <!-- For more info and examples you can check out http://ckeditor.com -->
                        <label asp-for="Product.Description">Açıklama</label>
                        <textarea id="js-ckeditor" asp-for="Product.Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.ShortDescription">Özet Bilgi</label>
                        <textarea class="form-control" asp-for="Product.ShortDescription" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        @*@await Component.InvokeAsync("CategoryList")*@
                        <label for="one-ecom-product-category">Kategori</label>
                        <select class="js-select2 form-control" asp-for="Product.CategoryId" style="width: 100%;" data-placeholder="Choose one..">
                            <option></option><!-- Required for data-placeholder attribute to work with Select2 plugin -->
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Product.UnitPrice">Fiyat (₺)</label>
                            <input asp-for="Product.UnitPrice" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Product.UnitsInStock">Stok</label>
                            <input asp-for="Product.UnitsInStock" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="d-block">Condition</label>
                        <div class="custom-control custom-radio custom-control-inline mb-1">
                            <input type="radio" class="custom-control-input" id="one-ecom-product-condition-new" name="one-ecom-product-condition" checked>
                            <label class="custom-control-label" for="one-ecom-product-condition-new">Yeni</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline mb-1">
                            <input type="radio" class="custom-control-input" id="one-ecom-product-condition-old" name="one-ecom-product-condition">
                            <label class="custom-control-label" for="one-ecom-product-condition-old">Eski</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Yayında mı?</label>
                        <div class="custom-control custom-switch mb-1">
                            <input type="checkbox" class="custom-control-input" id="one-ecom-product-published" name="one-ecom-product-published" checked>
                            <label class="custom-control-label" for="one-ecom-product-published"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-alt-success">Ürünü Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Info -->
    <!-- Media -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Media</h3>
        </div>
        <div class="block-content block-content-full">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <input type="file" name="file" />
                    <!-- Dropzone (functionality is auto initialized by the plugin itself in js/plugins/dropzone/dropzone.min.js) -->
                    <!-- For more info and examples you can check out http://www.dropzonejs.com/#usage -->
                    @*<form class="dropzone" action="be_pages_ecom_product_edit.html"></form>*@
                </div>
            </div>
        </div>
    </div>
    <!-- END Media -->
</form>
<!-- Page JS Plugins -->
<script src="~/panel/js/plugins/select2/js/select2.full.min.js"></script>
<script src="~/panel/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
<script src="~/panel/js/plugins/ckeditor/ckeditor.js"></script>
<script src="~/panel/js/plugins/dropzone/dropzone.min.js"></script>

<!-- Page JS Helpers (Select2 + CKEditor plugins) -->
<script>jQuery(function () { One.helpers(['select2', 'maxlength', 'ckeditor']); });</script>