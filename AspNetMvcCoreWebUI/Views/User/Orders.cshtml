@model UserOrdersViewModel
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <td></td>
                        <td>Ürün Adı</td>
                        <td>Adeti</td>
                        <td>Fiyatı</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td></td>
                                <td>@product.Name</td>
                                <td>3</td>
                                <td>@product.UnitPrice</td>
                            </tr>
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
